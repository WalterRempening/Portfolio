[ui-view].ng-enter, [ui-view].ng-leave,
.content.ng-leave, .content.ng-enter
  position absolute
  left 0
  right 0
  transition all .4s ease-in-out

[ui-view].ng-enter,
.content.ng-enter
  opacity 0
  transform translateY(-20px)

[ui-view].ng-enter-active,
.content.ng-enter-active
  opacity 1
  transform translateY(0px)

[ui-view].ng-leave,
.content.ng-leave
  opacity 1

[ui-view].ng-leave-active,
.content.ng-leave-active
  opacity 0

.works.ng-leave, .works.ng-enter
  position absolute
  transition all 0.4s ease-in-out

.works.ng-enter
  opacity 0

.works.ng-enter-active
  opacity 1

works.ng-leave
  opacity 1

.works.ng-leave-active
  opacity 0
