@import nib
@import '../js/libs/angular-material/angular-material.min.css'
@import url(http://fonts.googleapis.com/css?family=Roboto:400,100,900italic,900,100italic)

//-----------  Color Scheme  ---------------
$wp-black = #00000
$wp-bg = #ffffff
$wp-red = #FF4C59
$wp-light-red = #F5DFE1
$wp-dark-red = #8C2A36
$wp-blue = #32B8FF
$wp-light-blue = #BCDCEC
$wp-blue-h1 = #BAE3F9
$wp-dark-blue = #117BB2
$wp-dark-blue-h1 = #074869
$wp-ochre = #CCC714
$wp-light-ochre = #E4E4CF
$wp-ochre-h1 = #F0EB08
$wp-dark-ochre = #B2AE1A

// ------------ Mixins --------------------
first-letter-capital()
  text-transform uppercase
  font-size 3.8em
  float left
  margin 0px 16px 10px 0px
  line-height 50px

@font-face {
  font-family: 'Tannenberg-Fett';
  src: url('../fonts/Tannenberg-Fett.ttf.woff') format('woff'),
  url('../fonts/Tannenberg-Fett.ttf.svg#Tannenberg-Fett') format('svg'),
  url('../fonts/Tannenberg-Fett.ttf.eot'),
  url('../fonts/Tannenberg-Fett.ttf.eot?#iefix') format('embedded-opentype');
  font-weight: normal;
  font-style: normal;
}

html
  min-height 100%
  position relative
  background-color $wp-bg

body
  font-family Futura, 'Roboto', sans-serif
  background-color transparent

a
  text-decoration none

ul
  list-style none

.wrapper
  min-height 100%
  height auto !important
  overflow inherit

.content
  background-color $wp-bg
  min-height 100%

md-content
  overflow hidden

md-content.header-bg
  height 250px
  background-color $wp-dark-blue
  transform skew(0deg, -5deg)
  margin -65px 0px 100px
  position relative
  outline 1px solid transparent
  z-index 2

nav
  width 70%
  height 200px
  margin 75px auto
  transform skew(0deg, 5deg)

  .logo
    width 200px
    height 200px

    a
      display block
      width 100%
      height 100%

  ul

    li
      margin 53px 50px
      text-transform uppercase
      font-size 1.4em
      font-weight 800

      a
        color $wp-blue-h1
        margin-bottom 5px
        display inline-block
        transition color 0.5s
        font-weight 100

        &:hover
          color $wp-bg
          transition color 0.5s

      .active
        color $wp-bg
        border-bottom 3px solid $wp-red
        padding-bottom 10px
      //transition color 0.5s ease-in-out

      .idle
        color $wp-blue-h1

.home-bg
  height 65%
  width 100%
  background-color $wp-dark-blue
  z-index 0
  position absolute
  transform skew(0deg, -10deg)
  margin -128px 0px 0px

.container
  width 70%
  min-height 100%
  margin 0 auto
  padding 30px 0px 30px
  position relative

  .slogan
    font-size 3em
    text-align center
    font-style italic
    font-weight 800
    width 70%
    margin 0 auto

    span
      display block
      border 3px solid $wp-ochre
      width 300px
      margin 40px auto

  .home-logo
    width 80%
    margin 60px auto 0px
    height 550px
    display block

  .links
    width 50%
    margin 0 auto

    ul
      padding 0px

      li
        font-size 1.4em
        text-align center
        margin 3px auto

      a
        color #000000
        font-family 'Futura'
        font-weight 100
        text-transform uppercase

  .profile
    height 400px
    width 200px
    background-color #000066
    margin 20px

  .bio
    font-weight 100
    &:first-letter
      first-letter-capital()

  .cv
    h1
      font-weight 100

    div
      padding 5px 20px

    span
      margin 5px 0px 0px 0px

      color #353535

    .year
      font-style: italic
      font-weight 800
      color #808080
      text-align right
      padding-right 30px

.grid
  margin: 40px auto 10px;
  max-width: 1000px;
  width: 90%;

  a
    width: 100%;
    color: #333;
    display inline-block
    margin-bottom 30px

    figure
      position relative
      overflow hidden
      margin 5px
      background-color #000000

      svg
        position absolute
        top -1px
        z-index 10
        width 100%
        height 100%

      button
        position absolute
        padding: 4px 20px
        text-transform uppercase
        letter-spacing 1px
        font-weight bold
        transition opacity 0.3s, transform 0.3s
        top 50%
        left 50%
        border: 3px solid $wp-ochre;
        background: transparent;
        color: $wp-bg;
        opacity: 0;
        width 120px
        font-size 2em
        transform: translateY(-50%) translateX(-50%) scale(0.25);

      .sculptures
        border-color $wp-ochre
        color #ffffff
      .glosus
        border-color $wp-dark-blue
        color #000000
      .rolic
        border-color $wp-dark-red
        color #ffffff
      .creative
        border-color $wp-red
        color #ffffff
      .drivedeck
        border-color $wp-ochre
        color #ffffff

      img
        position: relative;
        display: block;
        width: 100%;
        opacity: 0.7;
        transition: opacity 0.3s;

      figcaption
        position absolute
        top 0
        z-index 11
        width 100%
        height 100%
        text-align left

        h2
          font-size 2.4em
          margin 15px 0 5px 0
          color $wp-bg
          text-transform uppercase
          letter-spacing 1px
          font-weight 300
          transform translateY(50px)
          transition transform 0.3s

        h2, p
          transform translateY(50px)
          padding-left 30px
        p
          margin-top 5px
          font-size 1.2em

figcaption, h2, p,
figure button
  backface-visibility: hidden

.grid a:hover figure img {
  opacity: 1;
}

.grid a:hover figcaption h2,
.grid a:hover figcaption p {
  transform: translateY(0);
}

.grid a:hover figure p {
  opacity 0;
}

.grid a:hover figcaption button {
  opacity: 1;
  transform: translateY(-50%) translateX(-50%) scale(1);
}

.white-section-bg
  background-color $wp-bg

.blue-section-bg
  background-color $wp-light-blue

.red-section-bg
  background-color $wp-red-red

.ochre-section-bg
  background-color $wp-light-ochre

.black-section-bg
  background-color $wp-black

.skew-bg
  transform skew(0deg, -5deg)
  height 100%
  padding 0px

  h2
    padding 0px

  span, h2
    transform skew(0deg, 5deg)

  span
    display block
    //padding-top 30px

  .container
    padding-top 0px

    .copy
      padding-bottom 30px

  .gallery-stack, .gallery-strip
    transform skew(0deg, 5deg)
    padding-bottom 60px


.unskew
  transform skew(0deg, 5deg)
  padding-top 60px

.detail

  .frame
    width 100%

  .header-bg
    width 100%
    height 100%
    position: fixed
    left 0
    top 0
    z-index -999

  .sculptures
    background url("../img/portfolio/sculptures/Sculptures-cover.jpg") no-repeat
    background-size cover
  .creative
    background url("../img/portfolio/sculptures/Sculptures-cover.jpg") no-repeat
    background-size cover
  .drivedeck
    background url("../img/portfolio/drivedeck/Drivedeck-cover.jpg") no-repeat
    background-size cover
  .rolic
    background url("../img/portfolio/rolic/Rolic-cover.jpg") no-repeat
    background-size cover
  .glosus
    background url("../img/portfolio/glosus/Glosus-cover.jpg") no-repeat
    background-size cover

  .work-titel
    font-size 4.5em
    font-weight 800
    text-align center
    width 100%
    color $wp-bg
    height 260px
    margin 0
    padding-top 70px
    display inline-block
    text-shadow 2px 2px $wp-dark-blue-h1

  section
    padding-top 50px
    margin 0 auto

  section.skew-bg
    padding-top 0px

  .opening
    width 100%
    &:first-letter
      first-letter-capital()

  .gallery-none
    display none

  .gallery-stack
    width 55%
    margin 0 auto
    padding-bottom 70px

    img
      width 100%

  .gallery-strip
    width 100%

    img
      width 25%


  .copy
    width 70%
    margin 0 auto
    padding 0px 0px 40px

  h2.empty
    display none
  h2.sub-titel
    font-size 3em
    font-weight 800
    text-transform uppercase
    width 80%
    margin 30px auto 20px
    text-align center
    position relative
    top -30px

.footer
  height 80px
  width 100%
  padding-top 50px
  background-color $wp-bg

  .container
    padding 0

  span
    font-size 0.9em
    text-align center
    display block
    margin 0px auto

[ui-view].ng-enter, [ui-view].ng-leave, .content.ng-leave, .content.ng-enter
  position absolute
  left 0
  right 0
  transition all .5s ease-in-out

[ui-view].ng-enter, .content.ng-enter
  opacity 0
  transform scale3d(0.5, 0.5, 0.5)

[ui-view].ng-enter-active, .content.ng-enter-active
  opacity 1
  transform scale3d(1, 1, 1)

[ui-view].ng-leave, .content.ng-leave
  opacity 1

[ui-view].ng-leave-active, .content.ng-leave-active
  opacity 0

.works.ng-leave, .works.ng-enter
  position absolute
  transition all 0.4s ease-in-out

.works.ng-enter
  opacity 0

.works.ng-enter-active
  opacity 1

works.ng-leave
  opacity 1

.works.ng-leave-active
  opacity 0
