        border-bottom 3px solid $wp-red
        width 16px
        position relative
        top -7px
        z-index 1
        margin 0 auto

      .left,.right
        transition opacity 0.4s ease-in-out, left 0.2s, right 0.2s
        opacity 0
      .left
        left 24px
      .right
        right 24px

      a
        color $wp-copy-text
        font-family 'Roboto'
        font-weight 100
        text-transform uppercase
        position: relative
        z-index 2
        background-color #ffffff
