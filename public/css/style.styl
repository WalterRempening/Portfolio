@import nib
@import '../js/libs/angular-material/angular-material.min.css'
@import url(http://fonts.googleapis.com/css?family=Roboto:400,100,900italic,900,100italic)

//----------------------------------------
$wp-black = #00000
$wp-bg = #c1d9e9
html
  min-height 100%
  position relative
  background-color $wp-bg

body
  font-family Futura, 'Roboto', sans-serif
  background-color $wp-bg

a
  text-decoration none

ul
  list-style none

.wrapper
  min-height 100%
  height auto !important

md-content
  background-color $wp-bg
  overflow hidden

nav
  width 70%
  height 200px
  margin 0 auto


  .logo
    width 200px
    height 200px

    a
      display block
      width 100%
      height 100%

  ul

    li
      margin 50px 50px
      text-transform uppercase
      font-size 1.4em
      font-weight 800
      color $wp-black
  
      a
        color $wp-black
        &:visited
          color #000000
        &:hover
          color #ffffff

.container
  width 70%
  min-height 100%
  margin 0 auto

  .home-logo
    width 80%
    margin 60px auto 0px
    height 441px
    display block


  .links
    width 50%
    margin 0 auto

    .title
      width: 89%
      background-color: #000
      color: #fff
      height: 50px
      font-size: 2em
      text-align: center
      margin: 10px auto
      padding: 8px 0px 3px
      font-style: italic

    ul
      padding 0px

      li
        font-size 2.4em
        text-align center
        width 72%;
        margin 0 auto

      a
        color #000000
        margin 5px 30px 0px
        font-family 'Futura'
        font-weight 100
        text-transform uppercase

  .profile
    height 400px
    width 200px
    background-color #000066
    margin 20px

  .bio
    font-weight 100

  .cv
    div
      padding 5px 20px

    .year
      font-style: italic
      font-weight 800
    span
      margin 5px 30px 0px 0px