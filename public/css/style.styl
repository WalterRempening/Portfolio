@import nib
@import '../js/libs/angular-material/angular-material.min.css'
@import url(http://fonts.googleapis.com/css?family=Roboto:400,100,900italic,900,100italic)

//-----------  Color Scheme  ---------------
$wp-black = #00000
$wp-bg = #ffffff
$wp-red = #FF4C59
$wp-dark-red = #8C2A36
$wp-blue = #32B8FF
$wp-dark-blue = #117BB2
$wp-ochre = #CCC714
$wp-dark-ochre = #B2AE1A

@font-face {
  font-family: 'Tannenberg-Fett';
  src:url('../fonts/Tannenberg-Fett.ttf.woff') format('woff'),
  url('../fonts/Tannenberg-Fett.ttf.svg#Tannenberg-Fett') format('svg'),
  url('../fonts/Tannenberg-Fett.ttf.eot'),
  url('../fonts/Tannenberg-Fett.ttf.eot?#iefix') format('embedded-opentype');
  font-weight: normal;
  font-style: normal;
}

html
  min-height 100%
  position relative
  background-color $wp-bg

body
  font-family Futura, 'Roboto', sans-serif
  background-color $wp-bg

a
  text-decoration none

ul
  list-style none

.wrapper
  min-height 100%
  height auto !important

md-content
  overflow hidden

md-content.header-bg
    height 250px
    background-color $wp-dark-blue
    transform skew(0deg,-5deg)
    margin -65px 0px 100px

nav
  width 70%
  height 200px
  margin 75px auto
  transform skew(0deg, 5deg)

  .logo
    width 200px
    height 200px

    a
      display block
      width 100%
      height 100%

  ul

    li
      margin 53px 50px
      text-transform uppercase
      font-size 1.4em
      font-weight 800
      color $wp-bg
  
      a
        color $wp-bg
        &:visited
          color $wp-bg
        &:hover
          color $wp-ochre

.home-bg
  height 65%
  width 100%
  background-color $wp-dark-blue
  z-index 0
  position absolute
  transform skew(0deg,-10deg)
  margin -128px 0px 0px

.container
  width 70%
  min-height 100%
  margin 0 auto
  position relative
  z-index 1

  .slogan
    font-size 3em
    text-align center
    font-style italic
    font-weight 800
    width 70%
    margin 0 auto

    span
      display block
      border 3px solid $wp-ochre
      width 300px
      margin 40px auto

  .home-logo
    width 80%
    margin 60px auto 0px
    height 550px
    display block

  .links
    width 50%
    margin 0 auto

    ul
      padding 0px

      li
        font-size 1.4em
        text-align center
        margin 3px auto

      a
        color #000000
        font-family 'Futura'
        font-weight 100
        text-transform uppercase

  .profile
    height 400px
    width 200px
    background-color #000066
    margin 20px

  .bio
    font-weight 100

  .cv
    div
      padding 5px 20px

    span
      margin 5px 0px 0px 0px

    .year
      font-style: italic
      font-weight 800

 .grid
    margin: 40px auto 120px;
    max-width: 1000px;
    width: 90%;

    a
      width: 100%;
      color: #333;
      display inline-block
      margin-bottom 30px

      figure
        position: relative;
        overflow: hidden;
        margin: 5px;

        svg
          position absolute
          top -1px
          z-index 10
          width 100%
          height 100%

        button
          position absolute
          padding: 4px 20px
          text-transform uppercase
          letter-spacing 1px
          font-weight bold
          transition opacity 0.3s, transform 0.3s
          top 50%
          left 50%
          border: 3px solid $wp-ochre;
          background: transparent;
          color: $wp-bg;
          opacity: 0;
          width 120px
          font-size 2em
          transform: translateY(-50%) translateX(-50%) scale(0.25);

        img
          position: relative;
          display: block;
          width: 100%;
          opacity: 0.7;
          transition: opacity 0.3s;

        figcaption
          position absolute
          top 0
          z-index 11
          width 100%
          height 100%
          text-align left

          h2
            font-size 2.4em
            margin 15px 0 20px 0
            color $wp-bg
            text-transform uppercase
            letter-spacing 1px
            font-weight 300
            transform translateY(50px)
            transition transform 0.3s

          h2, p
            transform translateY(50px)
            padding-left 30px

.grid figcaption,
.grid figcaption h2,
.grid figcaption p,
.grid figure button
  backface-visibility: hidden

.grid a:hover figure img {
  opacity: 1;
}

.grid a:hover figcaption h2,
.grid a:hover figcaption p {
  transform: translateY(0);
}

.grid a:hover figure p {
  opacity 0;
}

.grid a:hover figcaption button {
  opacity: 1;
  transform: translateY(-50%) translateX(-50%) scale(1);
}



.footer
  height 70px
  width 100%
  margin-top 50px

  span
    font-size 0.9em
    text-align center
    display block
    margin 40px auto 0px