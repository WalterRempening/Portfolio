.grid
  margin: 40px auto 10px;
  max-width: 1000px;
  width: 90%;

  a
    width: 100%;
    color: #333;
    display inline-block
    margin-bottom 30px

    figure
      position relative
      overflow hidden
      margin 5px
      background-color #000000

      svg
        position absolute
        top -1px
        z-index 10
        width 100%
        height 100%
        opacity 0.9

        @media (max-width: $small)
          height 260px

        @media (min-width: $small) and (max-width: $medium)
          height 420px

      button
        position absolute
        padding: 4px 20px
        text-transform uppercase
        letter-spacing 1px
        font-weight bold
        transition opacity 0.3s, transform 0.3s
        top 50%
        left 50%
        border: 3px solid $wp-ochre;
        background: transparent;
        color: $wp-bg;
        opacity: 0;
        width 120px
        font-size 2em
        transform: translateY(-50%) translateX(-50%) scale(0.25);


      .sculptures
        border-color $wp-ochre
        color #ffffff
      .glosus
        border-color $wp-dark-blue
        color #000000
      .rolic
        border-color $wp-dark-ochre
        color #ffffff
      .creative
        border-color $wp-red
        color #ffffff
      .drivedeck
        border-color $wp-red
        color #ffffff

      img
        position: relative;
        display: block;
        width: 100%;
        opacity: 0.7;
        transition: opacity 0.3s;

      figcaption
        position absolute
        top 0
        z-index 11
        width 100%
        height 100%
        text-align left

        @media (max-width: $small)
          top -54px

        @media (min-width: $small) and (max-width: $medium)
          top -40px

        h2
          font-size 2.4em
          font-family 'Roboto Slab'
          margin 15px 0 5px 0
          color $wp-bg
          text-transform uppercase
          letter-spacing 1px
          font-weight 800
          transform translateY(50px)
          transition transform 0.3s

          @media (max-width: $small)
            font-size 1.2em

          @media (min-width: $small) and (max-width: $medium)
            font-size 1.9em

        h2, p
          transform translateY(50px)
          padding-left 30px

          @media (max-width: $small)
            padding-left 10px

          @media (min-width: $small) and (max-width: $medium)
            font-size 1.9em
            transform translateY(40px)

        p
          margin-top 5px
          font-size 1.2em
          font-weight 400

          @media (max-width: $small)
            font-size 0.6em

          @media (min-width: $small) and (max-width: $medium)
            font-size 1em


figcaption, h2, p,
figure button
  backface-visibility: hidden

.grid a:hover figure img {
  opacity: 1;
}

.grid a:hover figcaption h2,
.grid a:hover figcaption p {
  transform: translateY(0);
}

.grid a:hover figure p {
  opacity 0;
}

.grid a:hover figcaption button {
  opacity: 1;
  transform: translateY(-50%) translateX(-50%) scale(1);
}


@media (max-width: $small){
.grid a:hover figcaption h2,
.grid a:hover figcaption p {
  transform: translateY(50px);
}

.grid a:hover figure p {
  opacity 1;
}

.grid a:hover figcaption button {
  opacity: 0;
}
}

@media (min-width: $small) and (max-width: $medium){
.grid a:hover figcaption h2,
.grid a:hover figcaption p {
  transform: translateY(26px);
}

.grid a:hover figcaption button {
  opacity: 1;
  transform: translateX(-50%) scale(1);
}
}

