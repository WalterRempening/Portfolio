@import nib
@import '../js/libs/angular-material/angular-material.min.css'
@import url('https://fonts.googleapis.com/css?family=Roboto:400,300italic,300,400italic,100|Roboto+Slab:700,400')

//-----------  Color Scheme  ---------------
$wp-black = #00000
$wp-hover-gray = #D2D2D2
$wp-copy-text = #797979
$wp-bg = #ffffff
$wp-red = #FF4C59
$wp-light-red = #FFE8E8
$wp-dark-red = #8C2A36
$wp-blue = #32B8FF
$wp-light-blue = #BCDCEC
$wp-blue-h1 = #BAE3F9
$wp-dark-blue = #117BB2
$wp-dark-blue-h1 = #074869
$wp-ochre = #CCC714
$wp-light-ochre = #E4E4CF
$wp-ochre-h1 = #F0EB08
$wp-dark-ochre = #B2AE1A

// ------------ Screen Sizes --------------

$small = 500px
$medium = 1200px
$tall = 1040px

// ------------ Mixins --------------------
first-letter-capital()
  text-transform uppercase
  font-size 3.8em
  font-weight 700
  font-family 'Roboto Slab'
  float left
  margin 0px 16px 10px 0px
  line-height 50px

@font-face {
  font-family: 'Tannenberg-Fett';
  src: url('../fonts/Tannenberg-Fett.ttf.woff') format('woff'),
  url('../fonts/Tannenberg-Fett.ttf.svg#Tannenberg-Fett') format('svg'),
  url('../fonts/Tannenberg-Fett.ttf.eot'),
  url('../fonts/Tannenberg-Fett.ttf.eot?#iefix') format('embedded-opentype');
  font-weight: normal;
  font-style: normal;
}

html
  min-height 100%
  position relative
  background-color $wp-bg

body
  font-family 'Roboto', sans-serif
  background-color transparent

a
  text-decoration none

ul
  list-style none

.wrapper
  min-height 100%
  height auto !important
  overflow inherit

.content
  background-color $wp-bg
  min-height 100%

md-content
  overflow hidden

md-content.header-bg
  height 260px
  background-color $wp-dark-blue
  transform skew(0deg, -5deg)
  margin 5px 0px 0px
  position relative
  outline 1px solid transparent
  z-index 2
  top -100px

  @media (max-width: $small)
    height 220px

nav
  width 60%
  height 200px
  margin 105px auto 0px
  transform skew(0deg, 5deg)

  @media (max-width: $small)
    width 92%
    height 33%

  @media (min-width: $small) and (max-width: $medium)
    width 95%
    height 180px

  .logo
    width 200px
    height 200px

    @media (max-width: $small)
      width 100px
      height 100px

    a
      display block
      width 100%
      height 100%

  ul
    @media (max-width: $small)
      padding-left 10px

    li
      margin 53px 50px
      text-transform uppercase
      font-size 1.4em
      font-weight 800

      @media (max-width: $small)
        font-size 0.6em
        margin 5px 5px
        height 30px

      @media (min-width: $small) and (max-width: $medium)
        margin 10px 10px
        font-size 1.2em

      a
        color $wp-blue-h1
        margin-bottom 5px
        display inline-block
        transition color 0.5s
        font-weight 400

        &:hover
          color $wp-bg
          transition color 0.5s

      .active
        color $wp-bg
        border-bottom 3px solid $wp-red
        padding-bottom 10px

        @media (max-width: $small)
          padding-bottom 5px

      .idle
        color $wp-blue-h1


@keyframes backgroundDrop
  0% {height: 0%;}
  100% {height: 65%;}

@keyframes linksAppear
  0% {opacity: 0; top 60px;}
  100% {opacity: 1; top 0px;}

.home-bg
  height 65%
  width 100%
  background-color $wp-dark-blue
  z-index 0
  position absolute
  transform skew(0deg, -10deg)
  top -170px
  animation backgroundDrop .5s
  animation-timing-function cubic-bezier(.21,.53,.36,.92)

  @media (max-width: $small)
    height 72%

  @media (min-width: $small) and (max-width: $medium)
    height 65%

.container
  width 70%
  min-height 100%
  margin 0 auto
  padding 0px 0px 30px
  position relative

  @media (max-width: $small)
